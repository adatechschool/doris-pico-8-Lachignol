-- map

function check_flag(flag,x,y)
 sprite=mget(x,y)
 return fget(sprite,flag)
end
-->8
--player

function create_player()

perso={x=9,y=9,sprite=2}
end

function player_movement()
 newx=perso.x
 newy=perso.y
 if (btn(➡️)) newx+=1
 if (btn(⬅️)) newx-=1
 if (btn(⬆️)) newy-=1
 if (btn(⬇️)) newy+=1
 
 if check_flag(0,newx,newy)
 then
 else
 perso.x=newx
 perso.y=newy
 end
 end


function draw_player()
 spr(perso.sprite,perso.x*8,perso.y*8)
end
